<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="lesson"
            type="com.example.englishlearningapp.data.models.Lesson" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/lesson">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/purple_200"
                android:id="@+id/lesson_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:hint="Ten bai hoc"
                android:layout_gravity="center_vertical"
                android:text="@{lesson.lessonName}"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/lesson_content"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:hint="Noi dung bai hoc"
                android:text="@{lesson.content}"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:textSize="14sp"
                android:hint="Muc danh gia trung binh"
                android:id="@+id/lesson_score"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="@{lesson.scoreToString()}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
